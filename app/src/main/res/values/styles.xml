<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SectionHeaderTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/section_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsTitleTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsDescriptionTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderHorizontalLine">
        <item name="android:layout_width">@dimen/header_horizontal_line_width</item>
        <item name="android:layout_height">@dimen/header_horizontal_line_height</item>
        <item name="android:background">@color/purple_header_horizontal_line</item>
        <item name="android:rotation">@dimen/header_horizontal_line_rotation</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
    </style>

    <style name="NewsSourceButtonRounded" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/grey_news_source_title</item>
        <item name="android:clickable">false</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:backgroundTint">@color/grey_news_source_bg</item>
        <item name="android:textSize">@dimen/news_source_text_size</item>
        <item name="cornerRadius">@dimen/news_source_button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>